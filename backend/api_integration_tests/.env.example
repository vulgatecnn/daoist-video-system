# API集成测试环境变量配置文件示例
# 复制此文件为 .env 并根据实际情况修改配置

# 后端服务器配置
BACKEND_HOST=localhost
BACKEND_PORT=6000
BACKEND_PROTOCOL=http

# 前端服务器配置
FRONTEND_HOST=localhost
FRONTEND_PORT=5500
FRONTEND_PROTOCOL=http

# 数据库配置
TEST_DB_NAME=test_db.sqlite3
TEST_DB_ENGINE=django.db.backends.sqlite3
TEST_DB_HOST=
TEST_DB_PORT=
TEST_DB_USER=
TEST_DB_PASSWORD=

# 测试用户配置
TEST_USERNAME=testuser
TEST_PASSWORD=testpass123
TEST_EMAIL=testuser@test.com

# 管理员用户配置
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@test.com

# API配置
API_TIMEOUT=30
API_RETRY_COUNT=3
API_RETRY_DELAY=1.0
API_MAX_RETRY_DELAY=10.0

# 测试配置
TEST_PARALLEL_WORKERS=1
TEST_OUTPUT_DIR=test_results
TEST_LOG_LEVEL=INFO
TEST_GENERATE_HTML_REPORT=true
TEST_GENERATE_JSON_REPORT=true
TEST_CLEANUP_TEST_DATA=true

# 性能测试配置
PERF_MAX_RESPONSE_TIME=5.0
PERF_CONCURRENT_USERS=10
PERF_TEST_DURATION=60
PERF_RAMP_UP_TIME=10

# 调试和环境标志
DEBUG=false
CI=false
SKIP_SLOW_TESTS=false
SKIP_NETWORK_TESTS=false

# Django设置
DJANGO_SETTINGS_MODULE=daoist_video_system.settings
TESTING=1